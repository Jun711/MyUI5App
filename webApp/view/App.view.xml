<mvc:View
	displayBlock="true"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	controllerName="opensap.myapp.controller.App">
	<Carousel>
		<pages>
			<Image src="https://upload.wikimedia.org/wikipedia/commons/5/59/SAP_2011_logo.svg" height="400px"/>
			<Image src="https://upload.wikimedia.org/wikipedia/commons/thumb/8/8f/SAP-Logo.svg/2000px-SAP-Logo.svg.png" height="400px"/>
			<Image src="https://upload.wikimedia.org/wikipedia/commons/thumb/8/8f/SAP-Logo.svg/2000px-SAP-Logo.svg.png" height="400px"/>
		</pages>
	</Carousel>
	<Button
		text="{i18n>showHelloButtonText}"
		press="onShowHello"/>
	<Input
		value="{helloPanel>/recipient/name}"
		description="Hello {helloPanel>/recipient/name}"
		valueLiveUpdate="true"
		width="60%"/>
</mvc:View>